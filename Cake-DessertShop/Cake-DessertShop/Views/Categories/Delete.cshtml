@model CakeDessertShop.Data.Entities.Category

@{
    ViewData["Title"] = "Eliminar categoría";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que quieres eliminar?</h3>
<div>
    <partial name="_CategoryDetails"/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>
</div>
