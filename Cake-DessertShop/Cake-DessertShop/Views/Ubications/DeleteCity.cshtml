@model CakeDessertShop.Data.Entities.City

@{
    ViewData["Title"] = "Eliminar ciudad";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que quieres eliminar?</h3>
<div>
    <partial name="_CityDetails"/>
    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> 
        <a asp-action="Details" asp-route-id="@Model?.State.Id" class="btn btn-success">Regresar</a>
    </form>
</div>
