@model CakeDessertShop.Data.Entities.City

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CitiesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhoods.FirstOrDefault().Name)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("CreateCity", "States", new { id = Model.Id }, Context.Request.Scheme)' , 'Nuevo Barrio')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Barrio</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Neighborhoods)
        {
        <tr>
            <td>
                <a asp-action="DetailsNeighborhood" asp-controller="States" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("EditNeighborhood", "States", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Barrio')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>
