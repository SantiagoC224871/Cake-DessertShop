@model CakeDessertShop.Data.Entities.City

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CitiesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhoods.FirstOrDefault().Name)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddNeighborhood", "Ubications", new { id = Model.Id }, Context.Request.Scheme)' , 'Nuevo barrio')" class="btn btn-sm buttonlight text-white"><i class="fa fa-plus-circle"></i> Barrio </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Neighborhoods)
        {
        <tr>
            <td>
            </td>
                @Html.DisplayFor(modelItem => item.Name)
            <td>
                <a onclick="showInPopup('@Url.Action("EditNeighborhood", "Ubications", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar barrio')" class="btn btn-sm buttonmiddle"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm button deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>

