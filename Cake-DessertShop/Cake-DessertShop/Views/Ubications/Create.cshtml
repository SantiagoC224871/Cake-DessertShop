@model CakeDessertShop.Data.Entities.State

@{
    ViewData["Title"] = "Crear Departamento";
}

<h1>Crear</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cities" />
            <partial name="_State" />
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="buttonmiddle" />
                <a asp-action="Index" class="buttonlight">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
