@model CakeDessertShop.Data.Entities.Neighborhood

@{
    ViewData["Title"] = "Eliminar barrio";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que quieres eliminar?</h3>
<div>
    <partial name="_NeighborhoodDetails"/>
    <form asp-action="DeleteNeighborhood">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> 
        <a asp-action="DetailsCity" asp-route-id="@Model?.City.Id" class="btn btn-success">Regresar</a>
    </form>
</div>
