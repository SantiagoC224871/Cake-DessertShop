@model CakeDessertShop.Data.Entities.State

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CitiesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cities.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities.FirstOrDefault().NeighborhoodsNumber)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddCity", "Ubications", new { id = Model?.Id }, Context.Request.Scheme)' , 'Nueva Ciudad')" class="buttonlight text-white"><i class="fa fa-plus-circle"></i> Ciudad </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.Cities)
        {
        <tr>
            <td>
                <a asp-action="DetailsCity" asp-controller="Ubications" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeighborhoodsNumber)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("EditCity", "Ubications", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Ciudad')" class="btn btn-sm buttonmiddle"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm button deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>

